// Implementación recursiva de factorial
    calcular_factorial: function integer (numero: integer) = {
        if (numero <= 1) {
            return 1;
        } else {
            return numero * calcular_factorial(numero - 1);
        }
    }
    
    // Función para sumar dos enteros
    agregar_numeros: function integer (primer_num: integer, segundo_num: integer) = {
        return primer_num + segundo_num;
    }
    
    // Función que procesa arrays
    sumar_elementos: function integer (vector: array [] integer, longitud: integer) = {
        acumulador: integer = 0;
        indice: integer;
        for (indice = 0; indice < longitud; indice++) {
            acumulador = acumulador + vector[indice];
        }
        return acumulador;
    }
    
    // Función principal del programa
    main: function integer () = {
        // Declaración de variables de prueba
        valor_x: integer = 10;
        valor_y: integer = 20;
        resultado_suma: integer = agregar_numeros(valor_x, valor_y);
        
        print "suma(", valor_x, ", ", valor_y, ") = ", resultado_suma;
        
        // Cálculo de factorial
        entrada: integer = 5;
        factorial_resultado: integer = calcular_factorial(entrada);
        print "factorial(", entrada, ") = ", factorial_resultado;
        
        // Manipulación de arrays
        lista_numeros: array [5] integer = {1, 2, 3, 4, 5};
        suma_total: integer = sumar_elementos(lista_numeros, 5);
        print "suma del array = ", suma_total;
        
        // Estructura condicional
        if (valor_x < valor_y) {
            print valor_x, " es menor que ", valor_y;
        } else {
            print valor_x, " es mayor o igual que ", valor_y;
        }
        
        // Bucle while
        contador_while: integer = 0;
        while (contador_while < 3) {
            print "Iteracion: ", contador_while;
            contador_while = contador_while + 1;
        }
        
        // Bucle do-while
        iterador: integer = 0;
        do {
            print "Do-while: ", iterador;
            iterador = iterador + 1;
        } while (iterador < 2);
        
        // Bucle for
        contador_for: integer;
        for (contador_for = 0; contador_for < 3; contador_for++) {
            print "For: ", contador_for;
        }
        
        // Pruebas con diferentes tipos
        numero_flotante: float = 3.14159;
        valor_booleano: boolean = true;
        caracter: char = 'A';
        texto: string = "Hello, World!";
        
        print "Float: ", numero_flotante;
        print "Boolean: ", valor_booleano;
        print "Char: ", caracter;
        print "String: ", texto;
        
        // Operaciones matemáticas
        potencia_resultado: integer = 2 ^ 10;
        print "2^10 = ", potencia_resultado;
        
        // Operadores de incremento
        variable_prueba: integer = 5;
        print "val = ", variable_prueba;
        print "++val = ", ++variable_prueba;
        print "val++ = ", variable_prueba++;
        print "val = ", variable_prueba;
        
        return 0;
    }